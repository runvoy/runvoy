# runvoy Environment Variables Configuration
# Copy this file to .env and fill in your values (do not commit .env)

# ==============================================================================
# Server Configuration (Local Development)
# ==============================================================================

# HTTP server port for local development
# Default: 56212
RUNVOY_DEV_SERVER_PORT=56212

# ==============================================================================
# AWS Configuration
# ==============================================================================

# DynamoDB table name for API keys and user management
# Required for both Lambda and local development with AWS backend
RUNVOY_API_KEYS_TABLE=runvoy-api-keys

# AWS Region (standard AWS SDK environment variable)
AWS_REGION=us-east-1

# AWS Profile (for local development only)
# AWS_PROFILE=your-profile-name

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level: DEBUG, INFO, WARN, ERROR
# Default: INFO
RUNVOY_LOG_LEVEL=INFO

# ==============================================================================
# Service Configuration
# ==============================================================================

# Timeout for service initialization
# Default: 10s
RUNVOY_INIT_TIMEOUT=10s

# ==============================================================================
# Development & Testing
# ==============================================================================

# Admin API key for testing and smoke tests
# IMPORTANT: Keep this secret! Do not commit actual values
RUNVOY_ADMIN_API_KEY=your-admin-api-key-here

# Lambda function URL for backend testing
RUNVOY_LAMBDA_URL=https://your-lambda-url.lambda-url.region.on.aws

# S3 bucket for Lambda releases
# Default: runvoy-releases
RUNVOY_RELEASES_BUCKET=runvoy-releases
